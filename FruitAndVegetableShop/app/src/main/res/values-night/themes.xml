<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FruitAndVegetableShop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_green_night</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark_night</item>
        <item name="colorOnPrimary">@color/text_light</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_orange_night</item>
        <item name="colorSecondaryVariant">@color/lime_dark</item>
        <item name="colorOnSecondary">@color/text_light</item>

        <!-- Backgrounds and surfaces -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/text_light</item>
        <item name="colorOnSurface">@color/text_light</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>
